@model Shoes_store.Models.Basket

@{
    ViewData["Title"] = "Редактировать корзину";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditBasket" method="post">

    <input type="hidden" asp-for="IdBasket" /> <!-- Добавьте скрытое поле для IdBasket -->

    <div class="form-group">
        <label for="UserId">Пользователь</label>
        @Html.DropDownListFor(
                 model => model.IdUser,
                 new SelectList(ViewBag.Users, "IdUser", "FullName"),
                 "Выберите пользователя",
                 new { @class = "form-control" }
                 )
    </div>

    <div class="form-group">
        <label for="ProductId">Продукт</label>
        @Html.DropDownListFor(
                 model => model.IdProduct,
                 new SelectList(ViewBag.Products, "IdProduct", "Name"),
                 "Выберите продукт",
                 new { @class = "form-control" }
                 )
    </div>

    <div class="form-group">
        <label for="Quantity">Количество</label>
        <input type="number" class="form-control" id="Quantity" asp-for="Quantity" min="1" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
