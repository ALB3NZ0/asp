@model Shoes_store.Models.Basket

@{
    ViewData["Title"] = "Создать корзину";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="UserId">Пользователь</label>
        <select class="form-control" id="UserId" name="IdUser" required>
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.IdUser">@user.FullName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ProductId">Продукт</label>
        <select class="form-control" id="ProductId" name="IdProduct" required>
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.IdProduct">@product.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Quantity">Количество</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" required min="1" />
    </div>

    <button type="submit" class="btn btn-success">Создать</button>
</form>
