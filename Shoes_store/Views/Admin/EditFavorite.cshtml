@model Shoes_store.Models.Favorite

<h2>Редактировать избранное</h2>

<form asp-action="EditFavorite" method="post">

    <input type="hidden" asp-for="IdFavorites" />

    <div class="form-group">
        <label for="IdProduct">Продукт</label>
        <select asp-for="IdProduct" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "IdProduct", "Name", Model.IdProduct))">
            <option value="">Выберите продукт</option>
        </select>
    </div>

    <div class="form-group">
        <label for="IdUser">Пользователь</label>
        <select asp-for="IdUser" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "IdUser", "FullName", Model.IdUser))">
            <option value="">Выберите пользователя</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a href="@Url.Action("Favorites", "Admin")" class="btn btn-secondary">Отмена</a>
</form>
